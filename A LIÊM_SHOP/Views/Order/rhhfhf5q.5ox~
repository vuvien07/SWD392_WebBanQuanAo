<!--================Cart Area =================-->
<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Product</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Unit Price</th>
                            <th scope="col">Sub Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>
                                    <div class="media">
                                        <div class="d-flex">
                                            <img src="~/@item.Product.ImageUrl" alt="" style="width:150px">
                                        </div>
                                        <div class="media-body">
                                            <p>@item.Product.Name</p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @* @item.Quantity *@
                                    <div class="product_count">
                                        <input type="text" name="qty" id="sst" maxlength="12" value="@item.Quantity" title="Quantity:"
                                               class="input-text qty" readonly>

                                        @if (Model.OrderStatus == "Processing") *@
                                        @* { *@
                                        @*     <button onclick="window.location.href='@Url.Action("Add", "OrderDetails", new { id = @item.Product.Id, orderId = Model.Id })'; return false;" *@
                                        @*             class="increase items-count" type="button"> *@
                                        @*         <i class="lnr lnr-chevron-up"></i> *@
                                        @*     </button> *@
                                        @*     <button onclick="window.location.href='@Url.Action("Sub", "OrderDetails", new { id = @item.Product.Id, orderId = Model.Id })'; return false;" *@
                                        @*             class="reduced items-count" type="button"> *@
                                        @*         <i class="lnr lnr-chevron-down"></i> *@
                                        @*     </button> *@
                                        @* }
                                    </div>
                                </td>
                                <td>
                                    @item.UnitPrice
                                </td>
                                <td>
                                    <h5>@String.Format("{0:0.00}", item.Product.Price * item.Quantity)</h5>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="form-group">
                <label for="orderNote">Note:</label>
                <textarea id="orderNote" name="orderNote" class="form-control" rows="4" disabled>@Model.Note</textarea>
            </div>
        </div>
    </div>
</section>
