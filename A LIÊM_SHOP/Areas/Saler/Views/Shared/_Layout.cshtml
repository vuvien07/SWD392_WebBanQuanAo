@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@using A_LIÊM_SHOP.Extensions;
@using A_LIÊM_SHOP.ViewModels
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin | Dashboard</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/admin/assests/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="~/admin/assests/css/adminlte.min.css">
    <style>
        .listright {
            margin-left: 273px;
        }

            .listright h2 {
                margin-bottom: 20px;
            }

        td img {
            width: 60px;
            height: 60px;
        }

        .listright p a {
            color: #ffffff;
            background-color: #fb5849;
            padding: 10px;
        }

            .listright p a:hover {
                background-color: #ff0000;
                color: #ffffff;
            }

        .listright td a:hover {
            color: #ff0000;
        }

    </style>
</head>

<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        <!-- Preloader -->
        @*  <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="~/assets/images/logo3-removebg-small.png" alt="AdminLTELogo" height="60" width="60">
        </div> *@
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Auth/Logout" class="nav-link">Logout</a>
                </li>
            </ul>
        </nav>

        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="https://i.pinimg.com/736x/ff/99/e8/ff99e81f59e3a9c02ff4f799f35cfc90.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="d-block">Dashboard</a>
                    </div>
                </div>
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-edit"></i>
                                <p>
                                    Manager
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav">
                                @{
                                    var userData = HttpContextAccessor.HttpContext.Session.GetObjectFromSession<User>("user");
                                }
                                        @if (userData != null && userData.RoleId == 2)
                                {
                                    <li class="nav-item">
                                        <a asp-area="Saler" asp-controller="Order" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Order" ? "active" : "")">

                                            <i class="far fa-circle nav-icon"></i>
                                            <p>Order Manage</p>
                                        </a>
                                    </li>
                                }

                            </ul>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        @RenderBody()

        <footer class="main-footer">
            <strong>Copyright by me</strong> All rights reserved.
        </footer>
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/admin/assests/js/jquery.min.js"></script>
    <script src="~/admin/assests/js/adminlte.js"></script>
</body>

</html>